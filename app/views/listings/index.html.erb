<div class="row">
  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for word.." title="Type in a word" >
</div>

<%= paginate @listings %>

<table class="table table-list-search table-striped table-bordered" id="myTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Place type</th>
      <th>Property type</th>
      <th>Room number</th>
      <th>Bed number</th>
      <th>Guest Number</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Address</th>
      <th>Price</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.place_type %></td>
        <td><%= listing.property_type %></td>
        <td><%= listing.room_number %></td>
        <td><%= listing.bed_number %></td>
        <td><%= listing.guest_number %></td>
        <td><%= listing.country %></td>
        <td><%= listing.state %></td>
        <td><%= listing.city %></td>
        <td><%= listing.zipcode %></td>
        <td><%= listing.address %></td>
        <td><%= listing.price %></td>
        <td><%= listing.description %></td>
        <td><%= listing.user_id %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

