    </div>

    <div class="field">
      <%= form.label :bed_number %>
      <%= form.number_field :bed_number %>
    </div>

    <div class="field">
      <%= form.label :guest %>
      <%= form.text_field :guest %>
    </div>

    <div class="field">
      <%= form.label :number %>
      <%= form.text_field :number %>
    </div>

    <div class="field">
      <%= form.label :country %>
      <%= form.text_field :country %>
    </div>

    <div class="field">
      <%= form.label :state %>
